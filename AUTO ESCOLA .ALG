algoritmo " AUTO ESCOLA "
var
 an, dn, apt: real
inicio
escreval ("--------------------------------------------------------------------------------------------------------------------------------------------------------------------------")
escreval ("DEPARTAMENTO DE TRANSITO ")
escreval ("--------------------------------------------------------------------------------------------------------------------------------------------------------------------------")
escreva ("Insira o ano atual: ")
leia (an)
escreva ("Insira seu ano de nascimento: ")
leia (dn)
apt <- (an - dn)
escreval ("------SEU STATUS----------------------------------------------------------------------------------------------------------------------------------------------------------")
escreval ("SUA IDADE É:", apt )
 se (apt >= 18)entao
   escreva (" VOÇE É APTO A TIRAR HABLITAÇÃO ")
 senao
 escrevaL ("VOÇE NÃO É APTO A TIRAR HABLITAÇÃO ")
 ESCREVAL("--------------------------------------------------------------------------------------------------------------------------------------------------------------------------")
 fimse

fimalgoritmo