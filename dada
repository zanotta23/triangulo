    <div id="res"></div>

    
    <script>        
        function calcular() {
            var txtv = window.document.getElementById('velocidade')
            var res = window.document.getElementById('res')
            var vel = Number(txtv.value)
            res.innerHTML = `Sua velocidade atual Ã© de ${vel}`

        }

    </script>
